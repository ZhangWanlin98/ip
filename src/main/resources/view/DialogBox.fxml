<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="chatRow" alignment="TOP_RIGHT" fillHeight="false" maxHeight="-Infinity" minHeight="-Infinity" spacing="5.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox fx:id="chatBox" alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 13;">
            <HBox.margin>
                <Insets left="13.0" right="5.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="13.0" left="13.0" right="13.0" top="13.0" />
            </padding>
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#070707" />
            </effect>
            <children>
                <Label fx:id="dialog" lineSpacing="5.0" text="Label" textFill="black" wrapText="true">
                    <font>
                        <Font name="Book Antiqua" size="12.0" />
                    </font>
                    <effect>
                    <DropShadow color="#ebdbdb" />
                    </effect>
                </Label>
            </children>
        </VBox>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
            <effect>
                <DropShadow color="#797676" />
            </effect>
        </ImageView>
    </children>
</fx:root>
